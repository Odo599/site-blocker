{
    "compilerOptions": {
        "target": "ES6",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "allowJs": false,
        "checkJs": false,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2017", "dom"],
        "removeComments": true
    },
    "include": ["src"]
}
