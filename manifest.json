{
    "manifest_version": 2,
    "name": "Site Blocker",
    "version": "1.0",
    "permissions": ["webRequest", "webRequestBlocking", "<all_urls>"],
    "background": {
        "scripts": ["background.js"]
    },
    "web_accessible_resources": ["redirect.html"],
    "browser_specific_settings": {
        "gecko": {
            "id": "siteblocker@example.com"
        }
    }
}
