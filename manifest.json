{
    "manifest_version": 2,
    "name": "Site Blocker",
    "description": "A simple website blocker to direct you to a page when you open a blocked page.",
    "version": "1.0",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "contextMenus"
    ],
    "background": {
        "scripts": [
            "scripts/storageApi.js",
            "scripts/background.js",
            "scripts/convertStats.js"
        ]
    },
    "web_accessible_resources": ["pages/redirect/redirect.html"],
    "browser_action": {
        "default_popup": "pages/popup/popup.html",
        "default_title": "Site Blocker"
    }
}
